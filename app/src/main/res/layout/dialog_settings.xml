<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenCode服务器地址"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="http://localhost:4096"
        android:inputType="textUri"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenCode用户名"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="abc"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenCode密码"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">
        
        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="123"
            android:inputType="textPassword" />
        
        <ImageView
            android:id="@+id/iv_password_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_view"
            android:padding="8dp"
            android:contentDescription="显示密码" />
    </LinearLayout>

    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="12dp" />

    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WebView设置"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/cb_auto_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="语音输入后自动发送"
        android:checked="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="勾选后，语音识别结果将自动发送到OpenCode"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp" />

    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="语音识别后端"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/rg_asr_backend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <RadioButton
            android:id="@+id/rb_asr_cloud_http"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="云端ASR HTTP (推荐⭐ HTTP API，兼容性好)" />

        <RadioButton
            android:id="@+id/rb_asr_funasr_ws"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FunASR WebSocket (实时流式，准确率高)" />

    </RadioGroup>

    <!-- Cloud HTTP ASR Configuration -->
    <TextView
        android:id="@+id/tv_cloud_asr_config_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="云端ASR HTTP配置"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_cloud_asr_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="http://localhost:8080"
        android:inputType="textUri"
        android:layout_marginBottom="12dp"
        android:visibility="gone" />

    <!-- FunASR WebSocket Configuration -->
    <TextView
        android:id="@+id/tv_funasr_config_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FunASR WebSocket配置"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_funasr_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ws://localhost:10095"
        android:inputType="textUri"
        android:layout_marginBottom="12dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_funasr_mode_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="识别模式"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <RadioGroup
        android:id="@+id/rg_funasr_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rb_funasr_mode_offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离线模式 (一句话识别，非流式)" />

        <RadioButton
            android:id="@+id/rb_funasr_mode_2pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2pass模式 (实时流式，句尾离线修正)" />

    </RadioGroup>

    </LinearLayout>
</ScrollView>
